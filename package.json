{
  "name": "hanshot",
  "version": "0.0.0",
  "private": true,
  "main": "dist/main.dist.js",
  "dependencies": {
    "cropperjs": "^0.7.0",
    "jimp": "^0.2.24",
    "lodash": "^4.6.1",
    "mkdirp": "^0.5.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.9.0",
    "css-loader": "^0.23.1",
    "electron": "^1.5.0",
    "electron-packager": "^7.1.0",
    "eslint": "^3.13.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.1",
    "tape": "^4.5.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-node-externals": "^1.2.0"
  },
  "scripts": {
    "hot-server": "webpack-dev-server --config=webpack/renderer.config.js --port=4000 --hot --inline",
    "build:main": "webpack --config webpack/main.config.js",
    "build:renderer": "webpack --config webpack/renderer.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "start-hot": "HANSHOT_HOT=1 electron -r babel-register src/main.js",
    "start": "electron .",
    "package": "npm run build && node package.js",
    "lint": "eslint src",
    "test": "npm run test:unit && npm run test:int && npm run test:int:node",
    "test:unit": "HANSHOT_TEST=true tape -r babel-register -r ./test/unit/helpers/fake-electron.js './test/unit/**/*.test.js'",
    "test:int": "HANSHOT_TEST=true node ./test/integration/setup/run.js",
    "test:int:node": "HANSHOT_TEST=true tape -r babel-register './test/int-node/**/*.test.js'"
  }
}
